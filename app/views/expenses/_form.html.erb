<%= form_for [@business_trip_info, @business_trip_info.expenses.build], :html => { :class => "form-horizontal expense" } do |f| %>

  <div class="control-group">
    <%= f.label :business_trip_info_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :business_trip_info_id, :class => 'form-control', :readonly => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :goods_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :goods_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :unit_price, :class => 'form-control' %>
    </div>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>
