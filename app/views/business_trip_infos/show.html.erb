<%- model_class = BusinessTripInfo -%>
<div class="page-header">
  <h1>个人出差信息表</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>标题:</strong></dt>
  <dd><%= @business_trip_info.title %></dd>
  <dt><strong>启程日期:</strong></dt>
  <dd><%= @business_trip_info.start_date %></dd>
  <dt><strong>返程日期:</strong></dt>
  <dd><%= @business_trip_info.end_date %></dd>
  <dt><strong>目的地:</strong></dt>
  <dd><%= @business_trip_info.destination %></dd>
  <dt><strong>总花费:</strong></dt>
  <dd><%= @business_trip_info.total_expense %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              business_trip_infos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_trip_info_path(@business_trip_info), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_trip_info_path(@business_trip_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
